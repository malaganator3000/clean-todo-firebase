{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "./dist/client", // La salida para el cliente
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/client/**/*", "src/server/**/*"],
  "exclude": ["node_modules"]
}
