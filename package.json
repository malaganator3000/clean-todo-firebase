{
  "scripts": {
    "build:client": "node esbuild.config.js",
    "build:css": "postcss src/client/styles/tailwind.css -o public/css/tailwind.css",
    "build:server": "tsc",
    "build": "npm run build:css && npm run build:client && npm run build:server",
    "dev": "npm run build && nodemon --watch src/server --exec ts-node src/server/index.ts"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.23.1",
    "express": "^4.21.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "pug": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
